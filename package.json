{
  "name": "blockchain-playground",
  "version": "1.0.0",
  "description": "A monorepo for blockchain applications including crypto wallet, DEX, and NFT marketplace",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:wallet": "pnpm --filter crypto-wallet dev",
    "dev:dex": "pnpm --filter simple-dex dev",
    "dev:nft": "pnpm --filter nft-marketplace dev",
    "dev:all": "pnpm -r --parallel dev",
    "build:wallet": "pnpm --filter crypto-wallet build",
    "build:dex": "pnpm --filter simple-dex build",
    "build:nft": "pnpm --filter nft-marketplace build",
    "build:all": "pnpm -r build",
    "preview:wallet": "pnpm --filter crypto-wallet preview",
    "preview:dex": "pnpm --filter simple-dex preview",
    "preview:nft": "pnpm --filter nft-marketplace preview",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
