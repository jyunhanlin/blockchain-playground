{
  "name": "blockchain-playground",
  "version": "1.0.0",
  "description": "A monorepo for blockchain applications",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter crypto-wallet dev",
    "build": "pnpm --filter crypto-wallet build",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
